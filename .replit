run = "npm install && npm run build:force && npm run preview"
entrypoint = "src/App.tsx"

[env]
XDG_CONFIG_HOME = "/home/runner/.config"
PATH = "/home/runner/$REPL_SLUG/.config/npm/node_global/bin:/home/runner/$REPL_SLUG/node_modules/.bin"
npm_config_prefix = "/home/runner/$REPL_SLUG/.config/npm/node_global"
NODE_ENV = "production"

[nix]
channel = "stable-22_11"

[deployment]
run = ["sh", "-c", "cp .env.replit .env.production && npm install && npm run build:force && npm run preview"]
build = ["sh", "-c", "cp .env.replit .env.production && npm install && npm run build:force"]
deploymentTarget = "cloudrun"
ignorePorts = false

[[ports]]
localPort = 5173
externalPort = 80
protocol = "http"

[languages.javascript]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx}"
syntax = "javascript"

[languages.javascript.languageServer]
start = [ "typescript-language-server", "--stdio" ]

[packager]
language = "nodejs"

[packager.features]
packageSearch = true
guessImports = true

[hosting]
route = "/"
directory = "dist"