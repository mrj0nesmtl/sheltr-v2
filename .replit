run = "npm install && npm run dev"
modules = ["nodejs-18", "web"]

[env]
XDG_CONFIG_HOME = "/home/runner/.config"
PATH = "/home/runner/sheltr-v2/node_modules/.bin:${PATH}"
npm_config_prefix = "/home/runner/.npm"
NODE_ENV = "development"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run preview"]
build = ["sh", "-c", "npm install && npm run build:force"]
deploymentTarget = "cloudrun"
ignorePorts = false

[[ports]]
localPort = 5173
externalPort = 80
protocol = "http"

[languages.javascript]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx}"
syntax = "javascript"

[languages.javascript.languageServer]
start = ["typescript-language-server", "--stdio"]

[packager]
language = "nodejs"

[packager.features]
packageSearch = true
guessImports = true

[hosting]
route = "/"
directory = "dist"
